{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "jarvis-marketing": {
      "development": {
        "fallback": "jarvis-marketing.vercel.app"
      }
    },
    "jarvis-docs": {
      "development": {
        "local": 3001
      },
      "routing": [
        {
          "group": "docs",
          "paths": ["/docs", "/docs/:path*"]
        }
      ]
    },
    "jarvis-unsecured": {
      "routing": [
        {
          "paths": ["/unsecured", "/unsecured/:path*"],
          "group": "unsecured"
        }
      ]
    }
  }
}