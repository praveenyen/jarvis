{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "jarvis-marketing": {
      "development": {
        "local": 3000,
        "fallback": "microfrontends-marketing.labs.vercel.dev"
      }
    },
    "jarvis-docs": {
      "development": {
        "local": 3001
      },
      "routing": [
        {
          "group": "docs",
          "paths": ["/docs", "/docs/:path*"]
        }
      ]
    },
    "jarvis-unsecured": {
      "development": {
        "local": 3002
      },
      "routing": [
        {
          "group": "unsecured",
          "paths": ["/unsecured", "/unsecured/:path*"]
        }
      ]
    }
  }
}
